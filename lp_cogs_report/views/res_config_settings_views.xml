<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="after">
                    <h2>COGS Reports Product Categories
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                    </h2>
                    <div class="row mt16 o_settings_container" id="cogs_report_category_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="cogs_report_category_finished_id" class="o_form_label" string="Product Category for Finished Goods"/>
                                <div class="text-muted">
                                    <field name="cogs_report_category_finished_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                </div>
                                <label for="cogs_report_category_pack_id" class="o_form_label" string="LPUS Product Category for Packs"/>
                                <div class="text-muted">
                                    <field name="cogs_report_category_pack_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="cogs_report_category_raw_id" class="o_form_label" string="Product Category for Raw Materials"/>
                                <div class="text-muted">
                                    <field name="cogs_report_category_raw_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                </div>
                                <label for="cogs_report_category_sub_id" class="o_form_label" string="Product Category for Sub Materials"/>
                                <div class="text-muted">
                                    <field name="cogs_report_category_sub_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
